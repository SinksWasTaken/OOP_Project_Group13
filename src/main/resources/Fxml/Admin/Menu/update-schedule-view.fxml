<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" styleClass="update-movie-anchor" stylesheets="@../../../Styles/admin/update-movie.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group13.Controllers.Admin.MenuOperations.UpdateScheduleController">

   <VBox layoutX="50.0" layoutY="25.0" prefHeight="750.0" prefWidth="800.0" spacing="10.0" styleClass="form-container">
      <Label layoutX="50.0" layoutY="30.0" text="Update Schedule" styleClass="form-title"/>

      <Label layoutX="50.0" layoutY="80.0" text="Select Session" styleClass="form-label"/>
      <ComboBox fx:id="sessionComboBox" layoutX="150.0" layoutY="80.0" styleClass="combobox-movie"/>

      <Label layoutX="50.0" layoutY="130.0" text="Session Date" styleClass="form-label"/>
      <DatePicker fx:id="sessionDatePicker" layoutX="150.0" layoutY="130.0"/>

      <Label layoutX="50.0" layoutY="180.0" text="Session Time" styleClass="form-label"/>
      <ComboBox fx:id="sessionTimePicker" layoutX="150.0" layoutY="180.0" promptText="Select Time" styleClass="combobox-movie"/>

      <Label layoutX="50.0" layoutY="230.0" text="Hall Number" styleClass="form-label"/>
      <ComboBox fx:id="hallComboBox" layoutX="150.0" layoutY="230.0" styleClass="combobox-movie"/>

      <Button fx:id="updateScheduleButton" layoutX="150.0" layoutY="300.0" text="Update Schedule" styleClass="form-button"/>
   </VBox>

</AnchorPane>