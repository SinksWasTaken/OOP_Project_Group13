<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Additional Products" style="-fx-font-size: 20; -fx-font-weight: bold;" />
    <HBox spacing="10">
        <TextField fx:id="firstNameField" promptText="First Name" />
        <TextField fx:id="lastNameField" promptText="Last Name" />
    </HBox>
    <Label text="Products:" style="-fx-font-size: 16;" />
    <VBox spacing="10">
        <CheckBox text="Beverages" fx:id="beveragesCheckBox" />
        <CheckBox text="Biscuits" fx:id="biscuitsCheckBox" />
        <CheckBox text="Toys" fx:id="toysCheckBox" />
    </VBox>
    <Label fx:id="updatedCartLabel" text="Updated Cart Total: $0.00" style="-fx-font-size: 14;" />
    <HBox spacing="10">
        <Button text="Add to Cart" fx:id="addToCartButton" />
        <Button text="Back" fx:id="backButton" />
        <Button text="Continue" fx:id="continueButton" />
    </HBox>
</VBox>
