<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="900.0" styleClass="genre-anchor" stylesheets="@../../../Styles/cashier/hall-view.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group13.Controllers.Cashier.CashierPurchaseTicketController">
    <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="25.0" prefHeight="750.0" prefWidth="800.0" spacing="10.0" styleClass="form-container">
        <Label fx:id="purchaseLabel" styleClass="form-title" text="Purchase Ticket" />
      <TextField fx:id="purchaseField" promptText="Enter Age" />
      <Button fx:id="discountButton" mnemonicParsing="false" styleClass="form-button" text="Add Discount" />
      <TableView fx:id="purchaseTable" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="ticketIDColumn" prefWidth="75.0" text="TicketID" />
          <TableColumn fx:id="seatsColumn" prefWidth="75.0" text="Seats" />
            <TableColumn fx:id="productsColumn" prefWidth="75.0" text="Products" />
        </columns>
      </TableView>
        <GridPane fx:id="seatGrid" alignment="CENTER" hgap="10" vgap="10">
        </GridPane>
      <Label fx:id="priceLabel" text="Price: " textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label fx:id="discountLabel" text="Discount: " textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label fx:id="totalLabel" text="Total:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
            <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="delete-button" text="Cancel" />
            <Button fx:id="nextStageButton" mnemonicParsing="false" styleClass="form-button" text="Purchase" />
        </HBox>
    </VBox>
</AnchorPane>
