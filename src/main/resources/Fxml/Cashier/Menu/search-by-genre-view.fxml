<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="900.0" styleClass="add-new-movie-anchor" stylesheets="@../../../Styles/admin/add-new-movie.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group13.Controllers.Cashier.MenuOperations.CashierSearchByGenreController">
    <VBox alignment="CENTER" spacing="10">
        <TextField fx:id="genreField" promptText="Enter Genre" />
        <Button onAction="#onSearchByGenre" text="Search" />
        <TableView fx:id="moviesTable" prefHeight="400.0" prefWidth="916.0">
            <columns>
                <TableColumn fx:id="movieNameColumn" text="Movie Name" />
                <TableColumn fx:id="genreColumn" text="Genre" />
                <TableColumn fx:id="imagePathColumn" text="Image" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
