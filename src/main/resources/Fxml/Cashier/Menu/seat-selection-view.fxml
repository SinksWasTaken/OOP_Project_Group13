<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Seat Selection" style="-fx-font-size: 20; -fx-font-weight: bold;" />
    <GridPane fx:id="seatGrid" hgap="10" vgap="10" />
    <HBox spacing="10">
        <Label text="Selected Seats: " />
        <Label fx:id="selectedSeatsLabel" text="0" />
    </HBox>
    <HBox spacing="10">
        <Label text="Total Price: " />
        <Label fx:id="totalPriceLabel" text="$0.00" />
    </HBox>
    <HBox spacing="10">
        <Button text="Add to Cart" fx:id="addToCartButton" />
        <Button text="Back" fx:id="backButton" />
        <Button text="Continue" fx:id="continueButton" />
    </HBox>
</VBox>
