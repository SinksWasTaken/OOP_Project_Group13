<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Session and Hall Selection" style="-fx-font-size: 20; -fx-font-weight: bold;" />
    <HBox spacing="10">
        <ComboBox fx:id="dayComboBox" promptText="Select Day" />
        <ComboBox fx:id="sessionComboBox" promptText="Select Session" />
        <ComboBox fx:id="hallComboBox" promptText="Select Hall" />
    </HBox>
    <Label fx:id="vacantSeatsLabel" text="Vacant Seats: " style="-fx-font-size: 14;" />
    <HBox spacing="10">
        <Button text="Continue" fx:id="continueButton" />
        <Button text="Back" fx:id="backButton" />
    </HBox>
</VBox>
