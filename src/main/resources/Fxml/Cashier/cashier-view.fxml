<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="productView" xmlns:fx="http://javafx.com/fxml" fx:controller="com.group13.Controllers.Cashier.ProductController">
    <top>
        <HBox alignment="CENTER" spacing="20">
            <Label text="Product Details" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <left>
        <VBox alignment="CENTER" spacing="20">
            <ImageView fx:id="productImage" fitHeight="200" fitWidth="200" />
        </VBox>
    </left>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Product Name:" />
            <TextField fx:id="productNameField" editable="false" />
            <Label text="Price:" />
            <TextField fx:id="productPriceField" editable="false" />
            <Label text="Stock Count:" />
            <TextField fx:id="productStockField" editable="false" />
            <Button fx:id="updateStockButton" text="Update Stock" onAction="#handleUpdateStock" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="addToCartButton" text="Add to Cart" onAction="#handleAddToCart" />
            <Button fx:id="backButton" text="Back" onAction="#goBack" />
        </HBox>
    </bottom>
</BorderPane>
