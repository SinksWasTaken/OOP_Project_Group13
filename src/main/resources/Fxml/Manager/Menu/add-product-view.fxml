<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="900.0" styleClass="add-new-movie-anchor" stylesheets="@../../../Styles/admin/add-new-movie.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group13.Controllers.Manager.MenuOperations.AddProductController">
    <VBox layoutX="50.0" layoutY="25.0" prefHeight="750.0" prefWidth="800.0" spacing="10.0" styleClass="form-container">
        <Label styleClass="form-title" text="Add Product" />
        <Label styleClass="form-label" text="Product Name" />
        <TextField fx:id="productNameField" styleClass="form-textfield" />
        <Label styleClass="info-label" text="Please enter a maximum of 50 characters." />

        <Label styleClass="form-label" text="Price" />
        <TextField fx:id="priceField" styleClass="form-textfield" />
        <Label styleClass="info-label" text="Please enter a double value." />

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <ImageView fx:id="productImageView" fitHeight="150.0" fitWidth="120.0" styleClass="form-img" />
            <Button fx:id="uploadImageButton" styleClass="form-button" text="Upload Product Image" />
        </HBox>
        <Label styleClass="info-label" text="Extensions that can be accepted: .jpg, .jpeg, .png" />

        <Label styleClass="form-label" text="Stock" />
        <TextField fx:id="stockField" styleClass="form-textfield" />
        <Label styleClass="info-label" text="Please enter an integer value." />

        <Button fx:id="addProductButton" styleClass="form-button" text="Add Product" />
        <Label styleClass="info-label" text="Please fill in all fields before adding a movie." />
    </VBox>
</AnchorPane>
