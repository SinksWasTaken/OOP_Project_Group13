<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ComboBox?>
<AnchorPane prefHeight="800.0" prefWidth="900.0" styleClass="add-new-movie-anchor" stylesheets="@../../../Styles/admin/add-new-movie.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group13.Controllers.Manager.MenuOperations.AddWorkerController">
    <VBox layoutX="50.0" layoutY="25.0" prefHeight="750.0" prefWidth="800.0" spacing="10.0" styleClass="form-container">
        <Label styleClass="form-title" text="Add Worker" />
        <Label styleClass="form-label" text="Username" />
        <TextField fx:id="usernameField" styleClass="form-textfield" />
        <Label styleClass="info-label" text="Please enter a maximum of 50 characters." />

        <Label styleClass="form-label" text="First Name" />
        <TextField fx:id="firstnameField" styleClass="form-textfield" />
        <Label styleClass="info-label" text="Please enter a maximum of 50 characters." />

        <Label styleClass="form-label" text="Last Name" />
        <TextField fx:id="lastnameField" styleClass="form-textfield" />
        <Label styleClass="info-label" text="Please enter a maximum of 50 characters." />

        <Label styleClass="form-label" text="Role" />
        <ComboBox fx:id="roleComboBox" styleClass="combobox-worker"></ComboBox>
        <Label styleClass="info-label" text="Please choose a role." />

        <Button fx:id="addWorkerButton" styleClass="form-button" text="Add Worker" />
        <Label styleClass="info-label" text="Please fill in all fields before adding a worker." />
    </VBox>
</AnchorPane>
