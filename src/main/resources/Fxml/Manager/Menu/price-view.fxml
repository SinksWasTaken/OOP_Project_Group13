<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="900.0" styleClass="add-new-movie-anchor" stylesheets="@../../../Styles/admin/add-new-movie.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group13.Controllers.Manager.MenuOperations.PriceController">
    <VBox layoutX="50.0" layoutY="25.0" prefHeight="750.0" prefWidth="800.0" spacing="10.0" styleClass="form-container">
        <Label styleClass="form-title" text="Price, Discount, Taxes" />
        <Label styleClass="form-label" text="Movie Ticket Price" />
        <TextField fx:id="ticketPriceField" styleClass="form-textfield" />

        <Label styleClass="form-label" text="Age - Based Discount Rate" />
        <TextField fx:id="discountField" styleClass="form-textfield" />

        <Label styleClass="form-label" text="Tax Rate of Movie Tickets" />
        <TextField fx:id="ticketTaxField" styleClass="form-textfield" />

        <Label styleClass="form-label" text="Tax Rate of Products" />
        <TextField fx:id="productTaxField" styleClass="form-textfield" />

        <Button fx:id="updatePricesButton" styleClass="form-button" text="Update Values" />
        <Label styleClass="info-label" text="Please fill in all fields before updating the values." />
    </VBox>
</AnchorPane>
