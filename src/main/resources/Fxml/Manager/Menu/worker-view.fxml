<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="900.0" styleClass="worker-anchor" stylesheets="@../../../Styles/manager/worker-view.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group13.Controllers.Manager.MenuOperations.WorkerController">
    <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="25.0" prefHeight="750.0" prefWidth="800.0" spacing="10.0" styleClass="form-container">
        <Label styleClass="form-title" text="View / Edit Inventory" />
        <TableView fx:id="workerTable" prefHeight="600.0" prefWidth="800.0" styleClass="worker-table">
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username" />
                <TableColumn fx:id="firstnameColumn" text="First Name" />
                <TableColumn fx:id="lastnameColumn" text="Last Name" />
                <TableColumn fx:id="roleColumn" text="Role" />
            </columns>
        </TableView>
        <HBox prefHeight="100.0" prefWidth="200.0" styleClass="hbox-centered">
            <Button fx:id="addWorkerButton" mnemonicParsing="false" styleClass="form-button" text="Add Worker"/>
            <Button fx:id="updateWorkerButton" mnemonicParsing="false" styleClass="form-button" text="Update Worker"/>
            <Button fx:id="deleteWorkerButton" mnemonicParsing="false" styleClass="delete-button" text="Delete Worker"/>
        </HBox>
    </VBox>
</AnchorPane>
